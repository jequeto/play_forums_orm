# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()


GET     /Forums 	                    controllers.Forums.index()

GET     /Forums/login 	                controllers.Users.login()
POST	/Forums/login 	                controllers.Users.authenticate()

GET     /Forums/logout 	                controllers.Users.logout()

POST	/Forums/insert					controllers.Forums.insertValidate()

GET     /Forums/update/:forumId 	    controllers.Forums.update(forumId: Long)

GET     /Forums/delete/:forumId 	    controllers.Forums.delete(forumId: Long)


GET     /Forums/:forumId             	controllers.Themes.index(forumId: Long)
GET     /Forums/:forumId/:themeId    	controllers.Messages.index(forumId: Long, themeId: Long)


GET		/Forums/:forumId/Themes/insert	controllers.Themes.insert(forumId: Long)
POST	/Forums/:forumId/Themes/insert	controllers.Themes.insertValidate(forumId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
